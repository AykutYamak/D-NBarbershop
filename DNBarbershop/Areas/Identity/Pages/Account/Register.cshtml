@page
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="LoginView">
    <div class="text-center d-flex justify-content-center align-items-center text-white m-3">
        <div class="text-center w-50 LoginDiv">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 class="m-3">@ViewData["Title"]</h1>
                <h2 class="p-1">Създайте си акаунт.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-2">
                    <label asp-for="Input.Email" class="form-label">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <label asp-for="Input.FirstName" class="form-label">Име</label>
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="Alex" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <label asp-for="Input.LastName" class="form-label">Фамилия</label>
                    <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Ivanov" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Потвърдете паролата</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                @* <div class="mb-2"> *@
                @*     <label asp-for="Input.Role" class="form-label">Роля</label> *@
                @*     <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select"> *@
                @*         <option disabled selected>- Select Role -</option> *@
                @*     </select> *@
                @* </div> *@
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-dark">Регистрация</button>
            </form>
        </div>
    </div>
    <a href="/" class="back-button">← Към началната страница</a>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
