@using DNBarbershop.Models.Entities
@model IEnumerable<Service>

<!DOCTYPE html>
<html>
<head>
</head>
<body class="crudOperationsView">
    <div class="container mt-4">
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h3 class="text-uppercase fw-bold text-danger">Услуги</h3>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-controller="Service" asp-action="Add" class="btn btn-dark shadow-sm px-4 py-2">
                    <i class="bi bi-person-plus"></i> Добави услуга
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Услуга</th>
                        <th scope="col">Описание</th>
                        <th scope="col">Цена</th>
                        <th scope="col">Продължителност</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td>@service.Id</td>
                            <td>@service.ServiceName</td>
                            <td>@service.Description</td>
                            <td>@service.Price</td>
                            <td>@service.Duration.Hours ч. @service.Duration.Minutes мин.</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-dark px-3 py-2" asp-action="Edit" asp-controller="Service" asp-route-id="@service.Id">
                                        <i class="bi bi-pencil"></i> Редактирай
                                    </a>
                                    <form asp-controller="Service" asp-action="Delete" asp-route-id="@service.Id" method="post">
                                        <button type="submit" class="btn btn-danger px-3 py-2">
                                            <i class="bi bi-trash"></i> Изтрий
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

