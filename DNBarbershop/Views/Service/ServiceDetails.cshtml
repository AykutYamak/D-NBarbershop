@model DNBarbershop.Models.ViewModels.Services.ServiceFilterViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/services.css" />
</head>
<body>
    <div class="container text-center">
        <form method="get" class="mb-3 bg-black bg-opacity-75 text-white p-3 rounded">
            <div class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label asp-for="MaxPrice" class="form-label">Макс цена:</label>
                    <input type="number" asp-for="MaxPrice" class="form-control">
                </div>
            </div>
            <div class="col-md-4" style="padding-top:1rem;">
                <button asp-action="ServiceDetails" asp-controller="Service" type="submit" class="btn btn-secondary">
                    <i class="bi bi-filter"></i> Филтрирай
                </button>
            </div>
        </form>
        <div class="container mt-4 d-flex flex-column align-items-center">
            <div class="row justify-content-center g-4">
                @foreach (var service in Model.Services)
                {
                    <div class="col-md-4 col-lg-3 mb-4 d-flex justify-content-center">
                        <div class="service-card shadow-sm p-3 text-center">
                            <div class="card-body">
                                <h5 class="card-title">@service.ServiceName</h5>
                                <p class="card-text">Цена: @service.Price</p>
                                <p class="card-text">Описание: @service.Description</p>
                                <p class="card-text">Продължителност: @service.Duration</p>

                            </div>
                        </div>
                    </div>
                }
                /*Make it look good*/
            </div>
        </div>
    </div>
</body>
</html>