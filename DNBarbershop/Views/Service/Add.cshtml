@model DNBarbershop.Models.ViewModels.Services.ServiceCreateViewModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        .card-body span{
            font-family: "Abril Fatface,serif";
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            border-bottom: solid 0.5px black
        }
        .card-body label{
            text-shadow: 0px 2px 4px rgba(0,0,0,0.5);
            font-family: "Abril Fatface,serif";
        }
        .card-body{
            width:60%;
        }
        /* Custom styling for consistency */
        .card-header h3 {
            font-family: "Abril Fatface", serif;
            letter-spacing: 1px;
            text-transform: uppercase;

        }
        .form-label{
            font-size:150%;
            border-bottom:1.5px white solid;
            width:100%;
            margin-bottom:3%;
        }
        .input{
            width:100%;
        }
        .form-label i {
            color: #0d6efd;
        }

        .btn-dark {
            position: relative;
            overflow: hidden;
        }

            .btn-dark::before {
                content: "";
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.2) 50%, transparent 100%);
                transition: left 0.7s ease;
            }

            .btn-dark:hover::before {
                left: 100%;
            }

        .form-control.is-invalid,
        .form-select.is-invalid {
            border-color: #dc3545;
        }
    </style>
</head>
<body class="crudOperationsView">
    <div class="container mt-3 d-flex justify-content-center mb-3">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 650px; width: 100%; margin-bottom:1%;">
            <div class="card-header bg-dark text-white py-4">
                <h3 class="text-center mb-0">Добави Услуга</h3>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="mb-4">
                        <label class="form-label fw-bold" asp-for="ServiceName">Име на услуга</label>
                        <input type="text" class="form-control shadow-sm rounded-3 py-2" asp-for="ServiceName" placeholder="Въведете име">
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold" asp-for="Description">Описание</label>
                        <textarea type="text" class="form-control shadow-sm rounded-3 py-2" asp-for="Description" placeholder="Въведете описание"></textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold" asp-for="Price">Цена (лв.)</label>
                        <input type="number" class="form-control shadow-sm rounded-3 py-2" asp-for="Price" placeholder="Въведете цена" min="0" step="1">
                        <span asp-validation-for="Price" class="text-dark">Трябва да бъде цяло число.</span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold" asp-for="Duration">Продължителност</label>
                        <div class="d-flex">
                            <select id="Hours" name="DurationHours" class="form-select me-2 shadow-sm rounded-3 py-2">
                                <option value="0">0 часа</option>
                                <option value="1">1 час</option>
                                <option value="2">2 часа</option>
                                <option value="3">3 часа</option>
                                <option value="4">4 часа</option>
                                <option value="5">5 часа</option>
                            </select>
                            <select id="Minutes" name="DurationMinutes" class="form-select shadow-sm rounded-3 py-2">
                                <option value="0">0 минути</option>
                                <option value="15">15 минути</option>
                                <option value="30">30 минути</option>
                            </select>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" asp-action="Add" asp-controller="Service" class="btn btn-dark btn-lg px-5 py-3 shadow-lg rounded-pill">
                            Запази
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
   
</body>
</html>

