@model DNBarbershop.Models.ViewModels.Users.UserViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/user-details.css" />
</head>
<body class="user-details">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="user-container">
                    <div class="user-info">
                        <h2>Информация за потребителя</h2>
                        <hr />
                        <div class="info">
                            <h5>Име: @Model.FirstName @Model.LastName</h5>
                            <h5>Имейл: @Model.Email</h5>
                            <h5>Телефон: @Model.PhoneNumber</h5>
                        </div>
                        <div class="edit-button-container">
                            <a class="btn btn-dark" asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id">
                                <i class="bi bi-pencil"></i> Редактирай
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="appointments-container">
                    <h2>Записани часове</h2>
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-striped table-hover shadow-sm rounded">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Бръснар</th>
                                    <th scope="col">Услуга</th>
                                    <th scope="col">Дата</th>
                                    <th scope="col">Час</th>
                                    <th scope="col">Статус</th>
                                    <th scope="col">#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.Appointments)
                                {
                                    <tr>
                                        <td>
                                            @if (appointment.Barber != null)
                                            {
                                                @($"{appointment.Barber.FirstName} {appointment.Barber.LastName}")
                                            }
                                            else
                                            {
                                                <span class="text-danger">Няма бръснар</span>
                                            }
                                        </td>
                                        <td>
                                            @string.Join(", ", appointment.AppointmentServices.Select(a => a.Service.ServiceName))
                                        </td>
                                        <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                        <td>@appointment.AppointmentTime</td>
                                        <td>@appointment.Status.ToString()</td>
                                        <td>
                                            <button type="button"
                                                    class="btn cancel-button px-3 py-2"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#userDeleteAppointmentModal"
                                                    data-appointment-id="@appointment.Id"
                                                    data-barber-name="@(appointment.Barber != null ? $"{appointment.Barber.FirstName} {appointment.Barber.LastName}" : "Няма бръснар")"
                                                    data-date="@appointment.AppointmentDate.ToString("dd/MM/yyyy")"
                                                    data-time="@appointment.AppointmentTime"
                                                    data-status="@appointment.Status.ToString()">
                                                @if (appointment.Status.ToString() == "Completed" || appointment.Status.ToString() == "Cancelled")
                                                {
                                                    <i class="bi bi-trash"></i>
                                                    <p>Изтрии</p>
                                                                            }
                                                else
                                                {
                                                    <p>Откажи час</p>
                                                }
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal fade" id="userDeleteAppointmentModal" tabindex="-1" aria-labelledby="userDeleteAppointmentModalLabel" aria-hidden="true" style="color:black;">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="userDeleteAppointmentModalLabel" style="font-weight:bold;">
                                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                                    Потвърждение
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Затвори"></button>
                            </div>
                            <div class="modal-body text-center">
                                <div class="mb-3 mx-auto d-flex justify-content-center align-items-center" style="width:50px; height:50px;">
                                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M4 6H20M16 6L15.7294 5.18807C15.4671 4.40125 15.3359 4.00784 15.0927 3.71698C14.8779 3.46013 14.6021 3.26132 14.2905 3.13878C13.9376 3 13.523 3 12.6936 3H11.3064C10.477 3 10.0624 3 9.70951 3.13878C9.39792 3.26132 9.12208 3.46013 8.90729 3.71698C8.66405 4.00784 8.53292 4.40125 8.27064 5.18807L8 6M18 6V16.2C18 17.8802 18 18.7202 17.673 19.362C17.3854 19.9265 16.9265 20.3854 16.362 20.673C15.7202 21 14.8802 21 13.2 21H10.8C9.11984 21 8.27976 21 7.63803 20.673C7.07354 20.3854 6.6146 19.9265 6.32698 19.362C6 18.7202 6 17.8802 6 16.2V6M14 10V17M10 10V17" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                </div>
                                <h6 class="mb-3" id="modalAppointmentMessage">Сигурни ли сте, че искате да отмените часа?</h6>
                                <div class="appointment-details p-3 rounded mb-3" style="background-color:lightgray">
                                    <p class="mb-1"><strong>Бръснар:</strong> <span id="modalBarberName"></span></p>
                                    <p class="mb-1"><strong>Дата:</strong> <span id="modalAppointmentDate"></span></p>
                                    <p class="mb-0"><strong>Час:</strong> <span id="modalAppointmentTime"></span></p>
                                </div>
                                <p class="text-muted mb-0"><u>Това действие не може да бъде отменено.</u></p>
                            </div>
                            <div class="modal-footer justify-content-center">
                                <form id="userDeleteAppointmentForm" method="post" style="display: flex; justify-content:center;">
                                    <button type="submit" class="btn btn-danger">Потвърди</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteModal = document.getElementById('userDeleteAppointmentModal');
            const deleteForm = document.getElementById('userDeleteAppointmentForm');

            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const appointmentId = button.getAttribute('data-appointment-id');
                const barberName = button.getAttribute('data-barber-name');
                const appointmentDate = button.getAttribute('data-date');
                const appointmentTime = button.getAttribute('data-time');
                const status = button.getAttribute('data-status');

                document.getElementById('modalBarberName').textContent = barberName;
                document.getElementById('modalAppointmentDate').textContent = appointmentDate;
                document.getElementById('modalAppointmentTime').textContent = appointmentTime;

                const message = status === "Completed" || status === "Cancelled"
                    ? "Сигурни ли сте, че искате да изтриете часа?"
                    : "Сигурни ли сте, че искате да откажете часа?";

                document.getElementById('modalAppointmentMessage').textContent = message;

                deleteForm.action = `/Appointment/UserAppointmentDelete/${appointmentId}`;
            });
        });
    </script>
</body>
</html>