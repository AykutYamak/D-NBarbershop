@model DNBarbershop.Models.ViewModels.Users.UserEditViewModel
<!DOCTYPE html>
<html>
<head>
</head>
<body class="user-details">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6 d-flex justify-content-center">
                <div class="card shadow-lg rounded-4 p-4 bg-dark text-white w-100">
                    <h3 class="text-center fw-bold mb-3">Редактирай профила си.</h3>
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3 text-center">
                            <label class="form-label fw-semibold" asp-for="FirstName">Име</label>
                            <input type="text" class="form-control border-0 shadow-sm" asp-for="FirstName" placeholder="Въведете име">
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div>
                        <div class="mb-3 text-center">
                            <label class="form-label fw-semibold" asp-for="LastName">Фамилия</label>
                            <input type="text" class="form-control border-0 shadow-sm" asp-for="LastName" placeholder="Въведете име">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 text-center">
                            <label class="form-label fw-semibold">Телефонен номер</label>
                            <br />
                            <label class="form-label fw-semibold" asp-for="PhoneNumber">
                                <input type="number" class="form-control" asp-for="PhoneNumber">
                            </label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" asp-action="Edit" asp-controller="User" class="btn btn-success px-4 py-2 shadow-sm">
                                <i class="bi bi-check-lg"></i> Запази
                            </button>
                            <a asp-action="Details" class="btn btn-outline-light px-4 py-2 ms-2">Отказ</a>
                        </div>
                    </form>
                    @section Scripts {
                        @{
                            await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                    }
                </div>
            </div>
        </div>
    </div>

</body>
</html>
