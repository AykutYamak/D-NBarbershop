@using DNBarbershop.Models.Entities
@model IEnumerable<User>

<!DOCTYPE html>
<html>
<head>
</head>
<body class="crudOperationsView">
    <div class="container mt-4">
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h3 class="text-uppercase fw-bold text-danger">Бръснари</h3>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-controller="User" asp-action="Add" class="btn btn-dark shadow-sm px-4 py-2">
                    <i class="bi bi-person-plus"></i> Добави бръснар
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Име</th>
                        <th scope="col">Фамилия</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-dark px-3 py-2" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
                                        <i class="bi bi-pencil"></i> Редактирай
                                    </a>
                                    <form asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-danger px-3 py-2">
                                            <i class="bi bi-trash"></i> Изтрий
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
