@model DNBarbershop.Models.ViewModels.WorkSchedules.WorkScheduleEditViewModel
<!DOCTYPE html>
<html>
<head>
</head>
<body class="crudOperationsView">
    <div class="container mt-4">
        <div class="card shadow-sm p-4 rounded">
            <h3 class="text-center text-white fw-bold mb-4">Добави бръснар</h3>
            <form method="post">
                <div class="form-group">
                    <label asp-for="BarberId" class="form-label fw-semibold">Избери бръснар</label>
                    <select asp-for="BarberId" asp-items="Model.Barbers" class="form-control">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Day of the Week</label>
                    <select asp-for="DayOfWeek" class="form-control">
    @foreach (var day in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>()
        .Where(d => d != DayOfWeek.Sunday))
    {
        <option value="@((int)day)" @(Model.DayOfWeek == day ? "selected" : "")>@day</option>
    }
</select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold" asp-for="StartTime">Начален час</label>
                    <input type="time" asp-for="StartTime" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold" asp-for="EndTime">Краен час</label>
                    <input type="time" asp-for="EndTime" class="form-control" required />
                </div>
                <div class="text-center">
                    <button type="submit" asp-action="Edit" asp-controller="WorkSchedule" class="btn btn-success px-4 py-2 shadow-sm">
                        <i class="bi bi-check-lg"></i> Запази
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>

