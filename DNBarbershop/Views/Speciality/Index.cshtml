@using DNBarbershop.Models.Entities
@model IEnumerable<Speciality>
<div class="container">
    <div class="row">
        <div class="col col-md-6">
            <h3>Нива</h3>
        </div>
        <div class="col col-md-6">
            <a asp-controller="Speciality" asp-action="Add" class="btn btn-primary">Добави ниво на специализиране</a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col">Ниво</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var speciality in Model)
        {
            <tr>
                <td>@speciality.Id</td>
                <td>@speciality.Type</td>
                <td>
                    <div class="d-flex gap-2">
                        <a class="btn btn-dark px-3 py-2" asp-controller="Speciality" asp-action="Edit" asp-route-id="@speciality.Id">
                            <i class="bi bi-pencil"></i> Редактирай
                        </a>
                        <form asp-controller="Speciality" asp-action="Delete" asp-route-id="@speciality.Id" method="post">
                            <button type="submit" class="btn btn-danger px-3 py-2">
                                <i class="bi bi-trash"></i> Изтрий
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
