@model DNBarbershop.Models.ViewModels.Specialities.SpecialityEditViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        .card-header{
            width:75%;
        }
        .card-header h3 {
            font-family: "Abril Fatface", serif;
            letter-spacing: 1px;
            text-transform: uppercase;

        }

        .form-label {
            font-size: 200%;
            border-bottom: 1.5px white solid;
            width: 100%;
            margin-bottom: 3%;
        }

        .form-control {
            font-size: 1.2rem;
        }

        .btn-dark {
            position: relative;
            overflow: hidden;
        }

            .btn-dark::before {
                content: "";
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.2) 50%, transparent 100%);
                transition: left 0.7s ease;
            }

            .btn-dark:hover::before {
                left: 100%;
            }
    </style>
</head>
<body class="crudOperationsView">
    <div class="container mt-3 d-flex justify-content-center mb-3">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 600px; width: 100%; margin-bottom:1%;">
            <div class="card-header bg-dark text-white py-4">
                <h3 class="text-center mb-0">Редактирай ниво на специалност</h3>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post" class="text-center">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label class="form-label fw-bold" asp-for="Type">Ниво на специалност</label>
                        <input type="text" class="form-control shadow-sm rounded-3 py-2" asp-for="Type" placeholder="Въведете ниво">
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" asp-action="Edit" asp-controller="Speciality"
                                class="btn btn-dark btn-lg px-5 py-3 shadow-lg rounded-pill">
                            Запази
                        </button>
                        <a asp-action="Index" class="btn btn-outline-dark btn-lg px-5 py-3 ms-2 shadow-lg rounded-pill">Отказ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>