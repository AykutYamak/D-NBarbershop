@model DNBarbershop.Models.ViewModels.Specialities.SpecialityCreateViewModel
<!DOCTYPE html>
<html>
<head>
</head>
<body class="crudOperationsView">
    <form method="post" class="bg-black rounded p-3 w-50 text-center">
        @Html.ValidationSummary(true)
        @Html.ValidationMessageFor(m => m.Type)
        <div class="mb-3">
            <label class="form-label text-white" asp-for="Type"></label>
            <input type="text" class="form-control" asp-for="Type">
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-dark border-1 border-black" asp-action="Add" asp-controller="Speciality">Submit</button>
    </form>
</body>
</html>
    
