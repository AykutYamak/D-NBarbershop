@using DNBarbershop.Models.Entities
@using Microsoft.AspNetCore.Identity
@using DNBarbershop.DataAccess
@inject ApplicationDbContext _context
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) && _context.Users.Count()!=0)
{
    <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link nav-underline btn btn-link text-white border-0 " style="margin-top:20px; margin-bottom:10px;">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-white" style="margin-bottom:10px; margin-top:10px;" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" style="margin-bottom:10px; margin-top:10px;" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>