@model DNBarbershop.Models.ViewModels.Barbers.BarberCreateViewModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body class="crudOperationsView">
    <div class="container mt-3 d-flex justify-content-center mb-3">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 600px; width: 100%;">
            <div class="card-header bg-dark text-white py-4">
                <h3 class="text-center mb-0">Добави Бръснар</h3>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label fw-bold" asp-for="FirstName">Име</label>
                                <input type="text" class="form-control shadow-sm rounded-3 py-2"
                                       asp-for="FirstName" placeholder="Въведете име">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="form-label fw-bold" asp-for="LastName">Фамилия</label>
                                <input type="text" class="form-control shadow-sm rounded-3 py-2"
                                       asp-for="LastName" placeholder="Въведете фамилия">
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold" asp-for="SelectedSpecialityId">Ниво на специализация</label>
                        <select asp-for="SelectedSpecialityId" asp-items="Model.Specialities"
                                class="form-select shadow-sm rounded-3 py-2">
                            <option value="">Избери ниво на специализация</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold" asp-for="ExperienceYears">Години опит</label>
                        <input type="number" class="form-control shadow-sm rounded-3 py-2"
                               asp-for="ExperienceYears" placeholder="Въведете години опит" min="0">
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Изберете снимка:</label>
                        <input type="file" name="imageFile" id="imageFileInput" accept="image/*" class="form-control" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Качена снимка:</label>
                        <img id="imagePreview"  alt="Uploaded Image" style="max-width: 300px; text-align:center;" />
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" asp-action="Add" asp-controller="Barber"
                                class="btn btn-dark btn-lg px-5 py-3 shadow-lg rounded-pill">
                            Запази
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
   
    <style>
        .card-body label {
            text-shadow: 0px 2px 4px rgba(0,0,0,0.5);
            font-family: "Abril Fatface,serif";
            font-size:25px;
        }

        .card-body span {
            font-family: "Abril Fatface,serif";
        }
        .card-header h3 {
            font-family: "Abril Fatface", serif;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .form-label {
            font-size: 1.25rem;
            border-bottom: 1.5px solid #dee2e6;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
            color: #FFFFFF;
            width:100%;
        }

        .btn-dark {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-dark::before {
                content: "";
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.2) 50%, transparent 100%);
                transition: left 0.7s ease;
            }

            .btn-dark:hover::before {
                left: 100%;
            }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
    </style>
</body>
</html>