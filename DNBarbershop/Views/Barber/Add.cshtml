@model DNBarbershop.Models.ViewModels.Barbers.BarberCreateViewModel
<!DOCTYPE html>
<html>
<head>

</head>

<body class="crudOperationsView">
    <div class="container mt-4">
        <div class="card shadow-sm p-4 rounded">
            <h3 class="text-center text-white fw-bold mb-4">Добави бръснар</h3>
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold" asp-for="FirstName">Име</label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="Въведете име">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold" asp-for="LastName">Фамилия</label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Въведете фамилия">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="SelectedSpecialityId" class="form-label fw-semibold">Ниво на специализация</label>
                    <select asp-for="SelectedSpecialityId" asp-items="Model.Specialities" class="form-control">
                        <option value="">Избери ниво на специализация</option>
                    </select>
                    <span asp-validation-for="SelectedSpecialityId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold" asp-for="ExperienceYears">Години опит</label>
                    <input type="number" class="form-control" asp-for="ExperienceYears" placeholder="Въведете години опит" min="0">
                    <span asp-validation-for="ExperienceYears" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold" asp-for="ProfilePictureUrl">Профилна снимка</label>
                    <input type="text" class="form-control" asp-for="ProfilePictureUrl" placeholder="URL на снимката">
                    <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" asp-action="Add" asp-controller="Barber" class="btn btn-success px-4 py-2 shadow-sm">
                        <i class="bi bi-check-lg"></i> Запази
                    </button>
                </div>
            </form>
            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }
        </div>
    </div>
</body>

</html>

