@using DNBarbershop.Models.Entities
@model IEnumerable<Barber>


<div class="container mt-4">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h3 class="text-uppercase fw-bold text-danger">Бръснари</h3>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-controller="Barber" asp-action="Add" class="btn btn-dark shadow-sm px-4 py-2">
                <i class="bi bi-person-plus"></i> Добави бръснар
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Име</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Години опит</th>
                    <th scope="col">Ниво на специализация</th>
                    <th scope="col">Снимка</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var barber in Model)
                {
                    <tr>
                        <td>@barber.Id</td>
                        <td>@barber.FirstName</td>
                        <td>@barber.LastName</td>
                        <td>@barber.ExperienceYears</td>
                        <td>@barber.Speciality.Type</td>
                        <td>
                            <img src="@barber.ProfilePictureUrl" alt="Снимка на @barber.FirstName" class="rounded-circle shadow-sm" width="50" height="50">
                        </td>
                        <td>
                            <div class="col-md-6 text-md-end">
                                <form asp-controller="Barber" asp-action="Delete" asp-route-id="@barber.Id" method="post">
                                    <button type="submit" class="btn btn-dark px-2 py-2">
                                        Изтрии бръснар
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <a type="submit" asp-action="Edit" asp-controller="Barber" asp-route-id="@barber.Id">Редактирай</a>
                            </div>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>