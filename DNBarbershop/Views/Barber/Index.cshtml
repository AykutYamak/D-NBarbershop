@model DNBarbershop.Models.ViewModels.Barbers.BarberFilterViewModel
<!DOCTYPE html>
<html>
<head>
</head>
<body class="crudOperationsView">
    <div class="container mt-4">
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h3 class="text-uppercase fw-bold text-white" style="font-family:Abril Fatface, serif; font-size:2.5rem; text-align:left;">Бръснари</h3>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-controller="Barber" asp-action="Add" class="btn btn-dark shadow-sm px-4 py-2">
                    <i class="bi bi-person-plus"></i> Добави бръснар
                </a>
            </div>
        </div>
        <form method="get" class="mb-4 bg-black bg-opacity-85 text-white p-3 rounded shadow-sm" style="width:100%;">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="SpecialityId" class="form-label mb-2">Специализиране</label>
                    <select asp-for="SpecialityId" asp-items="Model.Specialities" class="form-select bg-dark text-light border-secondary">
                        <option value="">Всички</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="MinExperienceYears" class="form-label mb-2">Минимален опит (години)</label>
                    <input type="number" asp-for="MinExperienceYears" class="form-control bg-dark text-light border-secondary">
                </div>
                <div class="col-md-4">
                    <button asp-action="Index" asp-controller="Barber" type="submit" class="btn btn-secondary w-100 border-0">
                        <i class="bi bi-filter me-2"></i> Филтрирай
                    </button>
                </div>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Име</th>
                        <th scope="col">Фамилия</th>
                        <th scope="col">Години опит</th>
                        <th scope="col">Ниво на специализация</th>
                        <th scope="col">Снимка</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var barber in Model.Barbers)
                    {
                        <tr>
                            <td>@barber.Id</td>
                            <td>@barber.FirstName</td>
                            <td>@barber.LastName</td>
                            <td>@barber.ExperienceYears</td>
                            <td>@barber.Speciality?.Type</td>
                            <td>
                                <img src="@barber.ProfilePictureUrl" alt="Снимка на @barber.FirstName @barber.LastName" class="rounded-circle shadow-sm" width="50" height="50">
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-dark px-3 py-2" asp-controller="Barber" asp-action="Edit" asp-route-id="@barber.Id">
                                        <i class="bi bi-pencil"></i> Редактирай
                                    </a>
                                    <button type="button"
                                            class="btn btn-danger px-3 py-2"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteBarberModal"
                                            data-barber-id="@barber.Id"
                                            data-barber-name="@($"{barber.FirstName} {barber.LastName}")"
                                            data-barber-experience="@barber.ExperienceYears"
                                            data-barber-speciality="@barber.Speciality?.Type">
                                        <i class="bi bi-trash"></i> Изтрий
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal fade" id="deleteBarberModal" tabindex="-1" aria-labelledby="deleteBarberModalLabel" aria-hidden="true" style="color:black;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="deleteBarberModalLabel">
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i> Потвърждение за изтриване
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Затвори"></button>
                </div>
                <div class="modal-body text-center">
                    <div class="mb-3 mx-auto d-flex justify-content-center align-items-center" style="width:50px; height:50px;">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 6H20M16 6L15.7294 5.18807C15.4671 4.40125 15.3359 4.00784 15.0927 3.71698C14.8779 3.46013 14.6021 3.26132 14.2905 3.13878C13.9376 3 13.523 3 12.6936 3H11.3064C10.477 3 10.0624 3 9.70951 3.13878C9.39792 3.26132 9.12208 3.46013 8.90729 3.71698C8.66405 4.00784 8.53292 4.40125 8.27064 5.18807L8 6M18 6V16.2C18 17.8802 18 18.7202 17.673 19.362C17.3854 19.9265 16.9265 20.3854 16.362 20.673C15.7202 21 14.8802 21 13.2 21H10.8C9.11984 21 8.27976 21 7.63803 20.673C7.07354 20.3854 6.6146 19.9265 6.32698 19.362C6 18.7202 6 17.8802 6 16.2V6M14 10V17M10 10V17" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </div>
                    <h6 class="mb-3">Сигурни ли сте, че искате да изтриете този бръснар?</h6>
                    <div class="barber-details p-3 rounded mb-3" style="background-color:lightgray">
                        <p class="mb-1"><strong>Име:</strong> <span id="modalBarberName"></span></p>
                        <p class="mb-1"><strong>Опит:</strong> <span id="modalBarberExperience"></span> години</p>
                        <p class="mb-0"><strong>Специализация:</strong> <span id="modalBarberSpeciality"></span></p>
                    </div>
                    <p class="text-muted mb-0"><u>Това действие не може да бъде отменено.</u></p>
                </div>
                <div class="modal-footer justify-content-center">
                    <form id="deleteBarberForm" method="post">
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('deleteBarberModal');
            const form = document.getElementById('deleteBarberForm');

            modal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;

                const id = button.getAttribute('data-barber-id');
                const name = button.getAttribute('data-barber-name');
                const experience = button.getAttribute('data-barber-experience');
                const speciality = button.getAttribute('data-barber-speciality');

                document.getElementById('modalBarberName').textContent = name;
                document.getElementById('modalBarberExperience').textContent = experience;
                document.getElementById('modalBarberSpeciality').textContent = speciality || '—';

                form.action = `/Barber/Delete/${id}`;
            });
        });
    </script>


</body>

</html>
