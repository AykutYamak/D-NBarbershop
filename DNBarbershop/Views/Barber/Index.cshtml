@using DNBarbershop.Models.Entities
@model IEnumerable<Barber>


<div class="container">
    <div class="row">
        <div class="col col-md-6">
            <h3>Бръснари</h3>
        </div>
        <div class="col col-md-6">
            <a asp-controller="Barber" asp-action="Add" class="btn btn-primary">Добави бръснар</a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Име</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Ниво на специализация</th>
            <th scope="col">Години опит</th>
            <th scope="col">Снимка</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var barber in Model)
        {
            <tr>
                <td>@barber.Id</td>
                <td>@barber.FirstName</td>
                <td>@barber.LastName</td>
                <td>@barber.ExperienceYears</td>
                <td>@barber.Speciality.Type</td>
                <td>@barber.ProfilePictureUrl</td>
            </tr>
        }
    </tbody>
</table>