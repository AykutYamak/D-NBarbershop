@model DNBarbershop.Models.ViewModels.Messages.MessageViewModel
<!DOCTYPE html>
<html>
<head>
</head>
<body class="crudOperationsView">
    <div class="container mt-4">
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h3 class="text-uppercase fw-bold text-danger">Съобщения</h3>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-controller="Message" asp-action="Add" class="btn btn-dark shadow-sm px-4 py-2">
                    <i class="bi bi-person-plus"></i> Добави съобщение
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Име на потребител</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Коментар</th>
                        <th scope="col">Дата</th>
                        <th scope="col">Прочетено/Непрочетено</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model.Messages)
                    {
                        <tr>
                            <td>@message.Id</td>
                            @if(@message.User == null){
                                <td>Not Registered</td>
                            }
                            else{
                                <td>@message.User.FirstName @message.User.LastName</td>
                            }
                            <td>@message.Email</td>
                            <td>@message.Content</td>
                            <td>@message.Date.Day/@message.Date.Month/@message.Date.Year г.</td>
                            <td>@message.IsRead.ToString()</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-dark px-3 py-2" asp-controller="Message" asp-action="MarkAsRead" asp-route-id="@message.Id">
                                        <i class="bi bi-pencil"></i> ОК
                                    </a>
                                    <form asp-controller="Message" asp-action="Delete" asp-route-id="@message.Id" method="post">
                                        <button type="submit" class="btn btn-danger px-3 py-2">
                                            <i class="bi bi-trash"></i> Изтрий
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>

</html>
